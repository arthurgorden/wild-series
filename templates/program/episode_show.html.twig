{% extends 'base.html.twig' %}

{% block title %}episode #{{ episode.number }}
{% endblock %}

{% block body %}
	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
			<p></p>
			<h2>Saison
				{{ season.number }}
				de
				{{ program.title}}</h2>
			<p>{{ season.description }}</p>
		</div>
	</div>

	<div>
		<h2>Détail des épisodes :</h2>
		<h3>Titre de l'épisode :
			{{ episode.title }}</h3>
		<p>Synopsis :
			{{ episode.synopsis }}</p>
	</div>
<a href="{{ path("program_season_show", { programId: program.id, seasonId: season.id }) }}">Retour aux détails de la saison {{ season.number }} de {{ program.title }}</a>
</br>
	<a href="{{ path("category_show", { categoryName: program.category.name }) }}">Voir la catégorie</a>
</br>
<a href="{{ path('program_index') }}">
	Retour à la liste des programmes
</a>{% endblock %}
