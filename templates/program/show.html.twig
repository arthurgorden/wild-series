{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
		</div>
	</div>

	<div>
		<h2>Détail des saisons :
			{{ noSeasonFound }}</h2>
		<ul>
			{% for season in seasons %}
				<li>Saison
					{{ season.number }}
					- Année :
					{{ season.year }}
					-
					<a href="{{ path("program_season_show", { programId: program.id, seasonId: season.id }) }}">Voir la liste des épisodes</a>
				</li>
			{% endfor %}
		</ul>
	</div>

	<div>
		<strong>Acteurs :</strong>
		<ul>
			{% for actor in program.actors %}
				<li>{{ actor.name }}</li>
			{% else %}
				<li>Aucun acteur pour cette série</li>
			{% endfor %}
		</ul>
	</div>


	<a href="{{ path("category_show", { categoryName: program.category.name }) }}">Voir la catégorie</a>
</br>
<a href="{{ path('program_index') }}">
	Retour à la liste des programmes
</a>{% endblock %}
