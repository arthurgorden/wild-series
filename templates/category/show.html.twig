{% extends 'base.html.twig' %}

{% block title %}Série de la catégorie{{ category.name }}
{% endblock %}

{% block body %}
	{% for program in programs %}
		<div class="media">
			<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
			<div class="media-body">
				<h1 class="mt-0">Id #{{ program.id }} : <a href="{{ path("program_show", { id: program.id }) }}">{{ program.title }}</a></h1>
				<p>{{ program.synopsis }}</p>
				<p>Catégorie :
					{{ program.category.name }}</p>
			</div>
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
		</div>
	{% endfor %}

    <h1>{{ noProgramFound }}</h1>

	<a href="{{ path('category_index') }}">
		Retour à la liste des catégories
	</a>
{% endblock %}
